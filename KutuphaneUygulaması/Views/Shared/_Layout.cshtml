
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Yönetim Sistemi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
       <nav class="navbar navbar-expand-lg navbar-dark custom-nav">
  <div class="container">
    <!-- Marka ve GIF -->
    <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
  <img src="https://i.ibb.co/CsQNrXJw/book.png"
     alt="Kitap Logosu"
     class="img-fluid"
     style="height:40px; width:auto;" />
  <span class="ms-2">Kütüphane Yönetim Sistemi</span>
</a>

    <button class="navbar-toggler" type="button"
            data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false"
            aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
       
         <img src="https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExcTkyazFlaXRpNWN5d3NidHB2YXZuYng1aWMwdXlqNWlobWJwbTJnbiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/8N4fPgHDbC8Kb4Nofj/giphy.gif"
     alt="Kitap Logosu"
     class="img-fluid"
     style="height:40px; width:auto;" />
        <li class="nav-item">
          <a class="nav-link" asp-controller="Book" asp-action="List">Kitaplar</a>
        </li>
        <img src="https://media0.giphy.com/media/v1.Y2lkPTc5MGI3NjExZmhxNG9hZno2OGMyaHYyNXN2aDd3am91djl5Y3dxN3ZmeDU3MXdjMSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/OQyUzwykTvyzRdm2Ar/giphy.gif"
     alt="Kitap Logosu"
     class="img-fluid"
     style="height:40px; width:auto;" />
        <li class="nav-item">
          <a class="nav-link" asp-controller="Author" asp-action="List">Yazarlar</a>
        </li>
         <li class="nav-item">
          <a class="nav-link" asp-controller="Home" asp-action="Privacy">About</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-3">
        @Html.Partial("_Footer")
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
