@model KutuphaneUygulaması.Models.AuthorDeleteViewModel
@{
    ViewData["Title"] = "Yazar Sil";
}
<h1>@ViewData["Title"]</h1>

<p>Bu yazarı silmek istediğinize emin misiniz?</p>

<dl class="row">
    <dt class="col-sm-2">Ad Soyad</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
</form>
