@model KutuphaneUygulaması.Models.BookCreateViewModel

@{
    ViewData["Title"] = "Yeni Kitap Ekle";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

   

    <div class="mb-3">
        @Html.LabelFor(m => m.Title,    new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Title,  new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.AuthorId, new { @class = "form-label" })
        @Html.DropDownListFor(
            m => m.AuthorId,
            Model.Authors,
            "-- Seçiniz --",
            new { @class = "form-select" }
        )
        @Html.ValidationMessageFor(m => m.AuthorId, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Genre,    new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Genre,  new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.PublishDate, new { @class = "form-label" })
        @Html.TextBoxFor(
            m => m.PublishDate,
            "{0:yyyy-MM-dd}",
            new { @class = "form-control", type = "date" }
        )
        @Html.ValidationMessageFor(m => m.PublishDate, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.ISBN,     new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ISBN,   new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ISBN, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.CopiesAvailable, new { @class = "form-label" })
        @Html.TextBoxFor(
            m => m.CopiesAvailable,
            new { @class = "form-control", type = "number" }
        )
        @Html.ValidationMessageFor(m => m.CopiesAvailable, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @* Client-side validation için gerekli scriptler *@
    <partial name="_ValidationScriptsPartial" />
}
