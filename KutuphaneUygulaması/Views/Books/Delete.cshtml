@model KutuphaneUygulaması.Models.BookDeleteViewModel
@{
    ViewData["Title"] = "Kitap Sil";
}
<h1 class="text-danger">@ViewData["Title"]</h1>

<p>Bu kitabı silmek istediğinize emin misiniz?</p>

<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Yazar</dt>
    <dd class="col-sm-10">@Model.AuthorFullName</dd>

    <dt class="col-sm-2">Tür</dt>
    <dd class="col-sm-10">@Model.Genre</dd>

    <dt class="col-sm-2">Yayın Tarihi</dt>
    <dd class="col-sm-10">@Model.PublishDate.ToShortDateString()</dd>

    <dt class="col-sm-2">ISBN</dt>
    <dd class="col-sm-10">@Model.ISBN</dd>

    <dt class="col-sm-2">Kopya</dt>
    <dd class="col-sm-10">@Model.CopiesAvailable</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
</form>
