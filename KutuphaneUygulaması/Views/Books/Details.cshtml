@model KutuphaneUygulaması.Models.BookDetailsViewModel
@{
    ViewData["Title"] = "Kitap Detayları";
}
<h1 class="text-warning">@ViewData["Title"]</h1>


<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Yazar</dt>
    <dd class="col-sm-10">@Model.AuthorFullName</dd>

    <dt class="col-sm-2">Tür</dt>
    <dd class="col-sm-10">@Model.Genre</dd>

    <dt class="col-sm-2">Yayın Tarihi</dt>
    <dd class="col-sm-10">@Model.PublishDate.ToShortDateString()</dd>

    <dt class="col-sm-2">ISBN</dt>
    <dd class="col-sm-10">@Model.ISBN</dd>

    <dt class="col-sm-2">Mevcut Kopya</dt>
    <dd class="col-sm-10">@Model.CopiesAvailable</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="List" class="btn btn-secondary">Geri Dön</a>
</p>
